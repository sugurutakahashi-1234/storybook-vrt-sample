{
  "name": "loki-sample",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "bun run --filter '*' test",
    "dev": "bun run --filter web dev",
    "build": "bun run --filter web build",
    "typecheck": "bun run --filter '*' typecheck",
    "storybook": "bun run --filter @loki-sample/ui storybook",
    "build-storybook": "bun run --filter @loki-sample/ui build-storybook",
    "storybook:vrt:playwright": "bun run --filter @loki-sample/ui vrt:playwright",
    "storybook:vrt:update-snapshots": "bun run storybook:vrt:update-snapshots:local && bun run storybook:vrt:update-snapshots:docker",
    "storybook:vrt:update-snapshots:local": "bun run --filter @loki-sample/ui vrt:update-snapshots",
    "storybook:vrt:update-snapshots:docker": "bun scripts/update-snapshots-docker.ts vrt",
    "storybook:vrt:report:allure": "bun run --filter @loki-sample/ui vrt:report:allure",
    "storybook:vrt:report:reg": "bun run --filter @loki-sample/ui vrt:report:reg",
    "web:e2e:playwright": "bun run --filter web e2e:playwright",
    "web:e2e:update-snapshots": "bun run web:e2e:update-snapshots:local && bun run web:e2e:update-snapshots:docker",
    "web:e2e:update-snapshots:local": "bun run --filter web e2e:update-snapshots",
    "web:e2e:update-snapshots:docker": "bun scripts/update-snapshots-docker.ts e2e",
    "web:e2e:report:allure": "bun run --filter web e2e:report:allure",
    "web:e2e:report:reg": "bun run --filter web e2e:report:reg",
    "update-snapshots": "bun run storybook:vrt:update-snapshots && bun run web:e2e:update-snapshots",
    "knip": "knip",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepare": "test -n \"$CI\" || lefthook install",
    "outdated": "bun outdated",
    "update-deps": "bun update --latest && bun update --latest --filter '*'"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@types/bun": "^1.3.9",
    "knip": "^5.85.0",
    "lefthook": "^2.1.1",
    "reg-cli": "^0.18.14",
    "syncpack": "^14.0.0",
    "typescript": "^5.9.3",
    "ultracite": "7.2.3"
  },
  "packageManager": "bun@1.3.9"
}

{
  "name": "web",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "bun test app/",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "e2e:playwright": "bunx playwright test",
    "e2e:update-snapshots": "node -e \"require('fs').rmSync('e2e/screenshots/'+process.platform,{recursive:true,force:true})\" && bunx playwright test --update-snapshots",
    "e2e:report:allure": "bunx allure serve allure-results",
    "e2e:report:reg": "mkdir -p .reg/report && reg-cli .reg/actual e2e/screenshots/$(node -p process.platform) .reg/diff -R .reg/report/index.html -J .reg/out.json -M 0.01"
  },
  "dependencies": {
    "next": "^16.1.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "@loki-sample/ui": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "allure-playwright": "^3.4.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
